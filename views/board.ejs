</head>

<body>

    <div class="nav">


    </div>
    <div class="main_table">
        <table class="table table-hover" id="board_tables">
            <thead>
                <tr>
                <th scope="col">num</th>
                <th scope="col">TITLE</th>
                <th scope="col">USER NAME</th>
                <th scope="col">DATE</th>
               
                </tr>
            </thead>
            
            <tbody>
                <% boards.forEach(board => {%>        
                <tr>
                <th scope="row" onclick="location.href='/board/<%=board.boardId %>'"><%=board.boardId %></th>
                <td><%= board.title %></td>
                <td><%=board.userName %></td>
                <td><%= board.date %></td>
            </tr>
           <%     })%>
            </tbody>
        </table>
        <button type="button" class="btn btn-success" onclick="location.href='/board/write'">작성하기</button>
       
    </div>
</body>

