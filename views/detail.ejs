<title>항해 99 블로그 상세내용</title>

<style>
  
</style>
<script>
    $(document).ready(function(){
            $("#input_update_comment").hide()
             
    })

</script>
  

<body>

  <%- include('header.ejs') %>

        <div class="write_form">
            <form class="box">
                <div class="field">
                <label class="label">TITLE</label>
                <div class="control">
                    <%= board.title %>
                </div>
                </div>

                <div class="field">
                    <label class="label">CONTENT</label>
                    <div class="control">
                        <%=board.content%>
                    </div>
                </div>

                <div class="field">
                    <label class="label">NICK NAME</label>
                    <div class="control">
                        <%=board.nickName%>
                    </div>
                </div>

                <button type="button" class="btn btn-warning" onclick="location.href='/board/write/<%=board.boardId%>'" >수정하기</button>

            </form>
            <form name="comment_post" method="post" action="">
                <button type="button" class="button is-link comment" onclick="comment('<%=board.boardId%>')">댓글달기</button>
                <input class="input" id="content" type="text" placeholder="Text input">
            </form>

            <div class="input-group mb-3" id="input_update_comment">   
                <input type="text" class="form-control" id="comment-content" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                <button class="btn btn-outline-secondary" type="button" id="updated_comment" onclick="getCommentId()">수정완료</button>
              </div>
            
            <div class="comment_box contanier">  
                <% comments.forEach(comment=>{ %>       
                <div class="box" id="comment-box">
                    <%=comment.nickName%> : 
                   <%=comment.content %>                   
                  
                        <button class="button is-success is-light box_btn" onclick="open_input(),sendId('<%=comment.commentId%>')">수정</button>  
                   <button type="button" class="button is-danger is-light box_btn" onclick="delete_comment('<%=comment.commentId %>','<%=comment.boardId%>')">삭제</button>
                  </div>
                
                <% })%>
               
            </div>
        </div>
        

        
    </div>
</body>

</html>


